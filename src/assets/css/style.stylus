.choose .van-icon-search::before
  color black

.choose .van-icon-arrow-left::before
  color black
  font-size 20px

.choose .van-nav-bar__title
  font-size 0.5rem

.choose .van-nav-bar__content
  background #f9f9f9

// 全部的定制行程头部
.precious .van-icon-search::before
  color black

